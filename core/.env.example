# Server
# SERVER_HOST: bind address or hostname for the core HTTP server.
SERVER_HOST=<server_host>
# SERVER_PORT: TCP port number (1-65535).
SERVER_PORT=<server_port>
# LOG_LEVEL: logging verbosity (trace|debug|info|warn|error).
LOG_LEVEL=<log_level>

# Database
# DATABASE_URL: Postgres connection string.
DATABASE_URL=<database_url>

# Telemetry exporter
# TELEMETRY_EXPORTER_HOST: bind address for exporter HTTP server.
TELEMETRY_EXPORTER_HOST=<telemetry_exporter_host>
# TELEMETRY_EXPORTER_PORT: bind port for exporter HTTP server.
TELEMETRY_EXPORTER_PORT=<telemetry_exporter_port>
# TELEMETRY_EXPORTER_READONLY_REPLICA_DSN: read-only Postgres replica DSN used by telemetry-exporter.
TELEMETRY_EXPORTER_READONLY_REPLICA_DSN=<telemetry_exporter_readonly_replica_dsn>
# TELEMETRY_EXPORTER_SNAPSHOT_INTERVAL_SEC: snapshot refresh cadence in seconds.
TELEMETRY_EXPORTER_SNAPSHOT_INTERVAL_SEC=<telemetry_exporter_snapshot_interval_sec>
# TELEMETRY_EXPORTER_QUERY_TIMEOUT_MS: per-query timeout budget in milliseconds.
TELEMETRY_EXPORTER_QUERY_TIMEOUT_MS=<telemetry_exporter_query_timeout_ms>
# TELEMETRY_EXPORTER_MAX_DB_CONNECTIONS: max pool size for read-replica queries.
TELEMETRY_EXPORTER_MAX_DB_CONNECTIONS=<telemetry_exporter_max_db_connections>
# TELEMETRY_EXPORTER_STALE_AFTER_SEC: freshness threshold before readiness turns stale.
TELEMETRY_EXPORTER_STALE_AFTER_SEC=<telemetry_exporter_stale_after_sec>

# Ethereum network
# ETHEREUM_CHAIN_ID: numeric chain ID (e.g. 1, 11155111).
ETHEREUM_CHAIN_ID=<ethereum_chain_id>
# ETHEREUM_HTTP_RPC_URL: HTTP(S) JSON-RPC endpoint.
ETHEREUM_HTTP_RPC_URL=<ethereum_http_rpc_url>
# ETHEREUM_WS_RPC_URL: WS(S) JSON-RPC endpoint.
ETHEREUM_WS_RPC_URL=<ethereum_ws_rpc_url>
# ETHEREUM_CONTRACT_ADDRESS: deployed core contract address (0x-prefixed, 20 bytes).
ETHEREUM_CONTRACT_ADDRESS=<ethereum_contract_address>
# ETHEREUM_PRIVATE_KEY: operator wallet private key (0x-prefixed, 32 bytes).
ETHEREUM_PRIVATE_KEY=<ethereum_private_key>
# CRON_JOB_SETTINGS: cron schedule for background tasks.
CRON_JOB_SETTINGS=<cron_job_settings>
# NUMBER_OF_BLOCKS_TO_CONFIRM: confirmations required for finality (non-negative integer).
NUMBER_OF_BLOCKS_TO_CONFIRM=<number_of_blocks_to_confirm>
# ETHEREUM_MAX_LOG_BLOCK_RANGE: max block span per eth_getLogs request (positive integer).
ETHEREUM_MAX_LOG_BLOCK_RANGE=<ethereum_max_log_block_range>
# NUMBER_OF_PENDING_BLOCKS: pending block window (non-negative integer).
NUMBER_OF_PENDING_BLOCKS=<number_of_pending_blocks>
# CHAIN: optional chain label used by tooling/scripts.
CHAIN=<chain>

# Signing secrets
# BLS_PRIVATE_KEY: 32-byte hex BLS private key (0x-prefixed or raw hex).
BLS_PRIVATE_KEY=<bls_private_key>
# Optional: seed used to derive the initial admin API key
# CORE_ADMIN_SEED_KEY: 32-byte hex seed (0x-prefixed or raw hex).
CORE_ADMIN_SEED_KEY=<core_admin_seed_key>

# EIP712 domain
# EIP712_NAME: EIP-712 domain name string.
EIP712_NAME=<eip712_name>
# EIP712_VERSION: EIP-712 domain version string.
EIP712_VERSION=<eip712_version>

# Auth (SIWE + JWT)
# AUTH_NONCE_TTL_SECS: nonce lifetime in seconds (positive integer).
AUTH_NONCE_TTL_SECS=<auth_nonce_ttl_secs>
# AUTH_REFRESH_TTL_SECS: refresh token lifetime in seconds (positive integer).
AUTH_REFRESH_TTL_SECS=<auth_refresh_ttl_secs>
# AUTH_ACCESS_TTL_SECS: access token lifetime in seconds (positive integer).
AUTH_ACCESS_TTL_SECS=<auth_access_ttl_secs>
# AUTH_JWT_ISSUER: JWT issuer, must be non-empty and consistent per environment.
AUTH_JWT_ISSUER=<auth_jwt_issuer>
# AUTH_JWT_AUDIENCE: JWT audience, must be non-empty and match validators.
AUTH_JWT_AUDIENCE=<auth_jwt_audience>
# AUTH_JWT_SECRET: HMAC secret for signing JWTs (recommend 32+ bytes, keep private).
AUTH_JWT_SECRET=<auth_jwt_secret>
# AUTH_SIWE_STATEMENT: SIWE statement shown to signers.
AUTH_SIWE_STATEMENT=<auth_siwe_statement>
# AUTH_SIWE_DOMAIN: optional SIWE domain override (defaults to server host).
AUTH_SIWE_DOMAIN=<auth_siwe_domain>
# AUTH_SIWE_URI: optional SIWE URI override (defaults to server base URL).
AUTH_SIWE_URI=<auth_siwe_uri>
